@using MVCHarjoitusTyö.ObjectModels
@using MVCHarjoitusTyö.Models

@model IndexViewModel
<div style="font-family: Arial">

    @using (Html.BeginForm("Add", "Contact", FormMethod.Post))
    {
        <table style="margin-top: 50px;">
            <col width="200" />
            <col width="200" />
            <col width="200" />
            <col width="200" />
            <col width="200" />
            <tr>
                <td>@Html.Label("FirstName")<br /></td>
                <td>@Html.Label("LastName")<br /></td>
                <td>@Html.Label("PhoneNumber")<br /></td>
                <td>@Html.Label("Email")<br /></td>
                <td>@Html.Label("Edit contact")<br /></td>
            </tr>
            @for (int i = 0; i < Model.Contacts.Count(); i++)
            {
                <tr>
                    <td>@Html.Label(Model.Contacts.ElementAt(i).FirstName)</td>
                    <td>@Html.Label(Model.Contacts.ElementAt(i).LastName)</td>
                    <td>@Html.Label(Model.Contacts.ElementAt(i).PhoneNumber != null ? Model.Contacts.ElementAt(i).PhoneNumber : "")</td>
                    <td>@Html.Label(Model.Contacts.ElementAt(i).Email != null ? Model.Contacts.ElementAt(i).Email : "")</td>
                    <td>@Html.ActionLink("Edit", "Edit", "Contact", new { id = Model.Contacts.ElementAt(i).Id }, null) / @Html.ActionLink("Remove", "Remove", "Contact", new { id = Model.Contacts.ElementAt(i).Id }, null)</td>
                </tr>
            }
        </table>
        <br />
            <input type="submit" value="add" name="action" />
    }
</div>
