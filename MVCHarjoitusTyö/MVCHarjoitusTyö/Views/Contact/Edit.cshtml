@using MVCHarjoitusTyö.Models

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model EditViewModel

<h2 style="margin-left: 11%">Edit</h2>

@using (Html.BeginForm("Update", "Contact", FormMethod.Post))
{
    <input type="hidden" value="@Model.SelectedContact.Id" name="id" />
    <table style="margin-left: 11%">
        <col width="150" />
        <col width="200" />
        <tr>
            <td>Firstname</td>
            <td><input type="text" name="firstname" value="@Model.SelectedContact.FirstName" /></td>
        </tr>
        <tr>
            <td>Lastname</td>
            <td><input type="text" name="lastname" value="@Model.SelectedContact.LastName" /></td>
        </tr>
        <tr>
            <td>Phonenumber</td>
            <td><input type="text" name="phonenumber" value="@Model.SelectedContact.PhoneNumber" /></td>
        </tr>
        <tr>
            <td>Email</td>
            <td><input type="text" name="email" value="@Model.SelectedContact.Email" /></td>
        </tr>
        <tr>
            <td>Address</td>
        </tr>
        <tr>
            <td>Street</td>
            <td><input type="text" name="street" value="@Model.SelectedContact.Address.Street" /></td>
        </tr>
        <tr>
            <td>Housenumber</td>
            <td><input type="text" name="housenumber" value="@Model.SelectedContact.Address.HouseNumber" /></td>
        </tr>
        <tr>
            <td>ZIP-code</td>
            <td><input type="text" name="zip" value="@Model.SelectedContact.Address.ZIP" /></td>
        </tr>
        <tr>
            <td>Country</td>
            <td><input type="text" name="country" value="@Model.SelectedContact.Address.Country" /></td>
        </tr>
    </table>
    <div style="margin-left: 12%">
        <input type="submit" name="action" value="Save" />
        <input type="submit" name="action" value="Cancel" />
    </div>
}

