@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("logoff", "login", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Terve " + User.Identity.GetUserName() + "!", "Index", "userrole")
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Kirjaudu ulos</a></li>
    </ul>
    }
}
